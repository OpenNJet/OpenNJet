if [ $PCRE != NONE -a $PCRE != NO -a $PCRE != YES ]; then
    . auto/lib/pcre/make
fi

if [ $OPENSSL != NONE -a $OPENSSL != NO -a $OPENSSL != YES ]; then
    . auto/lib/openssl/make
    . auto/lib/njetmq/make
    if [ "$NJT_HELPER_HA" = "YES" ]; then
     . auto/lib/keepalived/make
    fi
fi

if [ "$NJT_HTTP_RDKAFKA" = "YES" ]; then
    . auto/lib/librdkafka/make
fi

if [ "$NJT_HTTP_MODSECURITY" = "YES" ]; then
    . auto/lib/modsecurity/make
fi

if [ $ZLIB != NONE -a $ZLIB != NO -a $ZLIB != YES ]; then
    . auto/lib/zlib/make
fi

if [ $NJT_LIBATOMIC != NO -a $NJT_LIBATOMIC != YES ]; then
    . auto/lib/libatomic/make
fi

if [ $USE_PERL != NO ]; then
    . auto/lib/perl/make
fi
if [ $NJT_LIBTCC != NO ]; then
    . auto/lib/tcc-0.9.26/make
fi
cd auto/lib/sqlite3 && ./configure --disable-shared --enable-static && make
cd -
cd auto/lib/luapkg && make
cd -



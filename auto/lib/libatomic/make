    case $NJT_LIBATOMIC in
        /*) njt_prefix="$NJT_LIBATOMIC/build" ;;
        *)  njt_prefix="$PWD/$NJT_LIBATOMIC/build" ;;
    esac

    cat << END                                            >> $NJT_MAKEFILE

$NJT_LIBATOMIC/build/lib/libatomic_ops.a:      $NJT_LIBATOMIC/Makefile
       cd $NJT_LIBATOMIC && \$(MAKE) && \$(MAKE) install

$NJT_LIBATOMIC/Makefile:	$NJT_MAKEFILE
	cd $NJT_LIBATOMIC \\
	&& if [ -f Makefile ]; then \$(MAKE) distclean; fi \\
	&& ./configure --prefix=$njt_prefix

END
